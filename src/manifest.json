{
    "manifest_version": 2,
    "version": "0.1.1",
    "name": "Search On Site",
    "description": "Extension allows do search on specific site",
    "icons": {
        "16": "icon128.png",
        "48": "icon128.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": ["bg.js"]
    },
    "browser_action": {
        "default_icon": {
            "19": "icon128.png",
            "38": "icon128.png"
        },
        "default_title": "Click to Search On Site"
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "tabs", 
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://pyoner.github.io/search-on-site/*"],
            "js": ["content.js"],
            "all_frames": true,
            "run_at": "document_end"
        }
    ]
}
