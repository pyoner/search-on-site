{
  "name": "search-on-site",
  "module": "src/index.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -fr dist/",
    "copy": "mkdir -p dist/ && find src -type f ! -name '*.ts' -exec cp --parents '{}' dist/ ';'",
    "build": "bun run copy && bun build src/ --outdir dist/",
    "watch": "bun build src/ --outdir dist/ --watch"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "typechat": "^0.0.10"
  }
}
